 <%= radio_button("user", "category", "sponsor") %>
  <p>Host</p>
 <%= radio_button("user", "category", "host") %>
  <p>Streamer</p>
 <%= radio_button("user", "category", "streamer") %>


      <%= f.submit 'Save changes', :class => 'btn btn-warning' %>
  </div>




<% end %>
